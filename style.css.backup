/* Hazelnut Bloom Coffee Palette:
   #f3eee9 - Milk Froth (lightest)
   #e0cfc3 - Toasted Cashew
   #c3a995 - Hazelnut Bloom
   #a07e69 - Roasted Almond
   #715546 - Spiced Mocha
   #3e2b23 - Velvet Roast (darkest)
*/

:root {
  -fx-base: #f3eee9;
  -fx-accent: #715546;
  -fx-control-inner-background: #f3eee9;
  -fx-text-fill: #3e2b23;
  -fx-font-family: "Inter", "Segoe UI", "SF Pro Display", "Helvetica Neue", sans-serif;
  -fx-font-size: 14px;
  -fx-font-weight: bold;
}

/* Make all text bold globally */
.text, .label, .button, .text-field, .text-area, .combo-box,
.list-cell, .table-cell, .titled-pane .title {
  -fx-font-weight: bold;
}

/* Main Application Background */
.app-root {
  -fx-background-color: linear-gradient(to bottom, #f3eee9, #e0cfc3);
}

/* Navigation/Header Bar */
.nav-bar {
  -fx-background-color: linear-gradient(to right, #715546, #a07e69);
  -fx-padding: 15 20;
  -fx-background-radius: 10;
  -fx-border-radius: 10;
  -fx-border-color: #3e2b23;
  -fx-border-width: 2;
  -fx-effect: dropshadow(gaussian, rgba(62, 43, 35, 0.4), 10, 0, 0, 2);
}

.nav-bar .button {
  -fx-background-color: #c3a995;
  -fx-text-fill: white;
  -fx-background-radius: 8;
  -fx-padding: 8 16;
  -fx-border-color: #715546;
  -fx-border-radius: 8;
  -fx-border-width: 2;
  -fx-font-weight: bold;
  -fx-effect: dropshadow(gaussian, rgba(195, 169, 149, 0.4), 5, 0, 0, 2);
}

.nav-bar .button:hover {
  -fx-background-color: #a07e69;
  -fx-scale-x: 1.05;
  -fx-scale-y: 1.05;
}

.nav-bar .text {
  -fx-fill: white;
  -fx-font-size: 24px;
  -fx-font-weight: bold;
  -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 3, 0, 0, 1);
}
  -fx-border-width: 2;
  -fx-font-weight: bold;
  -fx-effect: dropshadow(gaussian, rgba(187, 196, 244, 0.4), 5, 0, 0, 2);
}

.nav-bar .button:hover {
  -fx-background-color: #c3a995;
  -fx-scale-x: 1.05;
  -fx-scale-y: 1.05;
}

.nav-bar .text {
  -fx-fill: white;
  -fx-font-size: 24px;
  -fx-font-weight: bold;
  -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 3, 0, 0, 1);
}

/* Calendar Grid */
.calendar-grid {
  -fx-background-color: linear-gradient(to bottom, #f3eee9, #e0cfc3);
  -fx-padding: 20px;
  -fx-background-radius: 10;
  -fx-border-color: #c3a995;
  -fx-border-width: 2;
  -fx-border-radius: 10;
}

/* Day Cards */
.day-card {
  -fx-background-color: linear-gradient(to bottom, #ffffff, #f3eee9);
  -fx-border-color: #c3a995;
  -fx-border-width: 2px;
  -fx-border-radius: 8px;
  -fx-background-radius: 8px;
  -fx-cursor: hand;
  -fx-effect: dropshadow(gaussian, rgba(187, 196, 244, 0.3), 5, 0, 0, 2);
}

.day-card:hover {
  -fx-background-color: linear-gradient(to bottom, #e0cfc3, #c3a995);
  -fx-border-color: #3e2b23;
  -fx-scale-x: 1.02;
  -fx-scale-y: 1.02;
}

.day-card.today {
  -fx-background-color: linear-gradient(to bottom, #3e2b23, #3e2b23);
  -fx-border-color: #3e2b23;
  -fx-border-width: 3px;
}

.day-card.today .day-label {
  -fx-text-fill: white !important;
  -fx-font-weight: bold;
}

.day-card.selected-day {
  -fx-background-color: linear-gradient(to bottom, #3e2b23, #3e2b23);
  -fx-border-color: #3e2b23;
  -fx-border-width: 3px;
}

.day-card.selected-day .day-label {
  -fx-text-fill: white !important;
}

.day-label {
  -fx-font-weight: bold;
  -fx-text-fill: #3e2b23;
  -fx-font-size: 14px;
}

/* Sidebar */
.sidebar {
  -fx-background-color: linear-gradient(to bottom, #3e2b23, #3e2b23);
  -fx-padding: 20px;
  -fx-border-radius: 10px;
  -fx-background-radius: 10px;
  -fx-border-color: #3e2b23;
  -fx-border-width: 2;
  -fx-effect: dropshadow(gaussian, rgba(62, 43, 35, 0.5), 10, 0, 0, 2);
}

.sidebar-title {
  -fx-text-fill: #f3eee9;
  -fx-font-weight: bold;
  -fx-font-size: 18px;
  -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 2, 0, 0, 1);
}

/* List View */
.list-view {
  -fx-background-color: #3e2b23;
  -fx-border-color: #3e2b23;
  -fx-border-width: 2px;
  -fx-border-radius: 8px;
  -fx-background-radius: 8px;
}

.list-view .list-cell {
  -fx-background-color: #3e2b23;
  -fx-text-fill: #f3eee9;
  -fx-border-color: #3e2b23;
  -fx-border-width: 0 0 1px 0;
  -fx-padding: 12px;
  -fx-font-size: 14px;
}

.list-view .list-cell:selected {
  -fx-background-color: #3e2b23;
  -fx-text-fill: white;
  -fx-font-weight: bold;
  -fx-effect: dropshadow(gaussian, rgba(69, 118, 177, 0.5), 5, 0, 0, 2);
}

.list-view .list-cell:hover {
  -fx-background-color: #c3a995;
  -fx-text-fill: #3e2b23;
}

.list-view .list-cell:empty {
  -fx-background-color: transparent;
}

/* Primary Buttons */
.primary-button {
  -fx-background-color: linear-gradient(to bottom, #c3a995, #3e2b23);
  -fx-text-fill: white;
  -fx-padding: 10px 20px;
  -fx-background-radius: 8px;
  -fx-cursor: hand;
  -fx-font-weight: bold;
  -fx-border-color: #3e2b23;
  -fx-border-width: 2;
  -fx-border-radius: 8px;
  -fx-effect: dropshadow(gaussian, rgba(69, 118, 177, 0.5), 8, 0, 0, 3);
}

.primary-button:hover {
  -fx-background-color: linear-gradient(to bottom, #e0cfc3, #c3a995);
  -fx-scale-x: 1.05;
  -fx-scale-y: 1.05;
}

.primary-button:pressed {
  -fx-background-color: #3e2b23;
  -fx-translate-y: 2;
}

/* Dialog Forms */
.dialog-form {
  -fx-background-color: linear-gradient(to bottom, #f3eee9, #e0cfc3);
  -fx-padding: 15px;
  -fx-background-radius: 10;
}

.dialog-form .label {
  -fx-text-fill: #3e2b23;
  -fx-font-weight: bold;
}

/* Input Fields */
.input-field, .input-area {
  -fx-background-color: white;
  -fx-border-color: #c3a995;
  -fx-border-radius: 5px;
  -fx-background-radius: 5px;
  -fx-padding: 8px;
  -fx-border-width: 2;
  -fx-text-fill: #3e2b23;
}

.input-field:focused, .input-area:focused {
  -fx-border-color: #3e2b23;
  -fx-background-color: #c3a995;
  -fx-effect: dropshadow(gaussian, rgba(69, 118, 177, 0.4), 5, 0, 0, 0);
}

/* TextArea */
.text-area {
  -fx-background-color: white;
  -fx-border-color: #c3a995;
  -fx-border-width: 2;
  -fx-border-radius: 5px;
  -fx-background-radius: 5px;
}

.text-area .content {
  -fx-background-color: white;
  -fx-text-fill: #3e2b23;
}

/* ComboBox */
.combo-box {
  -fx-background-color: white;
  -fx-border-color: #c3a995;
  -fx-border-radius: 5px;
  -fx-background-radius: 5px;
  -fx-border-width: 2;
}

.combo-box .list-cell {
  -fx-text-fill: #3e2b23;
}

/* CheckBox */
.check-box {
  -fx-text-fill: #3e2b23;
}

.check-box .box {
  -fx-background-color: white;
  -fx-border-color: #c3a995;
  -fx-border-width: 2;
  -fx-border-radius: 3;
  -fx-background-radius: 3;
}

.check-box:selected .mark {
  -fx-background-color: #3e2b23;
}

/* ScrollBar */
.scroll-bar {
  -fx-background-color: #3e2b23;
}

.scroll-bar .thumb {
  -fx-background-color: #3e2b23;
  -fx-background-radius: 5;
}

.scroll-bar .thumb:hover {
  -fx-background-color: #c3a995;
}

/* Dialog Pane */
.dialog-pane {
  -fx-background-color: linear-gradient(to bottom, #f3eee9, #e0cfc3);
  -fx-border-color: #c3a995;
  -fx-border-width: 2;
  -fx-border-radius: 10;
  -fx-background-radius: 10;
}

.dialog-pane .button {
  -fx-background-color: #c3a995;
  -fx-text-fill: white;
  -fx-font-weight: bold;
  -fx-padding: 8 16;
  -fx-background-radius: 5;
  -fx-border-color: #3e2b23;
  -fx-border-width: 2;
}

.dialog-pane .button:hover {
  -fx-background-color: #e0cfc3;
}

/* Labels */
.label {
  -fx-text-fill: #3e2b23;
}

/* Separators */
.separator .line {
  -fx-border-color: #c3a995;
  -fx-border-width: 1;
}

/* Alert Dialogs */
